<h1 style="text-align:center; font-size:300%; margin-top:2%">
  WELCOME TO BUS.COM
</h1>
<div id="form-layout" style="margin-left: 25%; margin-top: 7%; width: 50%; ">
  <p style="text-align:center; font-size: 300%">
    Sign Up
  </p>
  <form action="/" method="POST">
    <div class="form-group">
      <label for="user-name">Name</label>
      <input type="text" class="form-control" id="user-name" name="name" placeholder="Enter your name">
    </div>
    <div class="form-group">
      <label for="user-age">Age</label>
      <input type="text" class="form-control" id="user-age" name="age" placeholder="Enter your age">
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <input type="email" class="form-control" name="email" id="inputEmail4">
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">Password</label>
        <input type="password" class="form-control" name="password" id="inputPassword4">
      </div>
    </div>
    <input class="btn btn-primary" type="submit" value="Register User" method="POST" action="/" />

  </form>
</div>